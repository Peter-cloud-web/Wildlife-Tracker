{{#partial "content"}}
    <canvas id="barChart"></canvas>
        <section class="stats">
            <div class="card">
                <h5><b><u>All Endangered Animals</u></b></h5>
                {{#each   allEndangered}}
                <div class="row">
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                <div>
                                    <p>Name: {{animal_name}}</p>
                                    <p>Health: {{animal_health}}</p>
                                    <p>Age: {{animal_age}}</p>
                                    <p>Id: {{id}}</p>
                                </div>
                                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                                <a href="#" class="btn btn-primary">update</a>
                                <a href="#" class="btn btn-danger">delete</a>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
            <h5><u>All sighted Animals</u></h5>
                {{#each  allSightings}}
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <div>
                                <p>Animal{{animal_name}} Sighted</p>
                                <p>Location: {{animal_location}}</p>
                                <p>By: Ranger {{ranger_name}}</p>
                            </div>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            <a href="#" class="btn btn-primary">Update</a>
                            <a href="#" class="btn btn-danger">delete</a>
                        </div>
                    </div>
                </div>
                {{/each}}

        </section>
        <section class="recorded">
            <div>
                <h5><u>All registered Animals</u></h5>
                {{#each   allAnimals}}
                    <div class="text-white bg-dark col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                <div>
                                    <p>Name: {{animalName}}</p>
                                    <p>Id: {{id}}</p>
                                </div>
                                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                                <a href="#" class="btn btn-primary">Update</a>
                                <a href="#" class="btn btn-danger">delete</a>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div><br><br>
            </div>
        </section>
    </section>
    <style>
h5{ font-size:30px;text-align: center;
    font-family: 'Libre Baskerville', serif;
    font-family: 'Modak', cursive;
    font-family: 'Abril Fatface', cursive;
 font-weight:bolder;color:black;}
</style>

{{/partial}}

{{#partial "script"}}
        <script src="/js/jquery-3.4.0.min.js"></script>
        <script src="/js/script.js"></script>
{{/partial}}


